                    <StackPanel Name="SearchFilters"
                                    x:FieldModifier="public"
                                    Background="#323232">

                    </StackPanel>


                </ScrollViewer>

                <!--In Stock DataGrid -->
                <TextBlock Grid.Column="0"
                           Grid.Row="13"
                           Grid.ColumnSpan="10"
                           Name="inStockLabel"
                           Text="In STock"
                           Foreground="LawnGreen"
                           Margin="0 2 0 5"/>
                <ScrollViewer x:Name="table1"
                    PreviewMouseWheel="UIElement_OnPreviewMouseWheel" 
                          Grid.Column="0" 
                          Grid.Row="14" 
                          Grid.ColumnSpan="15"
                          Grid.RowSpan="10">

                    <ItemsControl>

                        <DataGrid 
                                  Name="inStockGrid"
                                  FontSize="12" 
                                  ItemsSource="{Binding InStockEntries}">
                        </DataGrid>
                    </ItemsControl>

                </ScrollViewer>


                <!--Out Of Stock DataGrid -->
                <TextBlock Name="outOfStockLabel"
                           Text="Out Of STock"
                           Margin="0 2 0 5"
                           Foreground="Red"
                           Grid.Column="0" 
                           Grid.Row="24"
                           Grid.ColumnSpan="15"/>
                <ScrollViewer x:Name="table2"
                              PreviewMouseWheel="UIElement_OnPreviewMouseWheel"  
                              Grid.Column="0" 
                              Grid.Row="25" 
                              Grid.ColumnSpan="15" 
                              Grid.RowSpan="9">
                    <ItemsControl>
                        <!--DataContextChanged="FrameworkElement_OnDataContextChanged"-->
                        <DataGrid 
                        FontSize="12" 
                              ItemsSource="{Binding OutOfStockEntries}"/>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="Running in a loop..."
                           Name="running"
                           Foreground="{StaticResource orangeBrush}"
                           Grid.Row="34"
                           Grid.ColumnSpan="10"
                           Margin="0 5 0 0"/>

                <!--<Grid>
            <WebBrowser Height="311" HorizontalAlignment="Left" Name="webBrowser1" VerticalAlignment="Stretch" Width="503"/>
            </Grid>-->
            </Grid>

        </materialDesign:Card>
    </materialDesign:DrawerHost>
</Window>
